</head>

<body>

    <div class="wrapper">
        <!-- Sidebar  -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <a href="@Url.Action("CreateQuote", "Txn")">
                    <img id="logo" src="~/image/logo.png">
                </a>
            </div>
            <ul class="list-unstyled components">
                <li style="text-align:center">
                    @Html.ActionLink("TX", "Index", "Txn")
                </li>
                <li style="text-align:center">
                    @Html.ActionLink("Payout", "Index", "Payout")
                </li>
                <li style="text-align:center">
                    @Html.ActionLink("Slip", "Index", "Slip")
                </li>
                @if (Context.Session.GetString("Role") == "S")
                {
                <li style="text-align:center">
                    @Html.ActionLink("Commission", "Export", "ReportCommission")
                </li>
                <li style="text-align:center">
                    @Html.ActionLink("Account Receivable", "Index", "ReportAccountReceivable")
                </li>
                <li style="text-align:center">
                    @Html.ActionLink("Account Payable", "Index", "ReportAccountPayable")
                </li>
                <li style="text-align:center">
                    @Html.ActionLink("Account Balance", "Index", "ReportAccountBalance")
                </li>
                <li style="text-align:center">
                    @Html.ActionLink("Transaction History", "Index", "AccountTxn")
                </li>

                }
                <li>
                    <a href="#SubmenuReport" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Report</a>
                    <ul class="collapse list-unstyled" id="SubmenuReport">
                        <li>
                            @Html.ActionLink("Provider Slip", "Index", "ReportProvider")
                        </li>
                        @*<li>
                                @Html.ActionLink("Account Payable", "Index", "ReportAccount")
                            </li>*@
                        @if (Context.Session.GetString("Role") == "A" || Context.Session.GetString("Role") == "S")
                        {
                        <li>
                            @Html.ActionLink("TX Gross Profit", "Index", "ReportTxn")
                        </li>
                        }
                    </ul>
                </li>
                <li>
                    <a href="#SubmenuClient" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Client</a>
                    <ul class="collapse list-unstyled" id="SubmenuClient">
                        <li>
                            @Html.ActionLink("Client", "Index", "Client")
                        </li>
                        <li>
                            @Html.ActionLink("Client Bank Account", "Index", "ClientBankAccount")
                        </li>
                        <li>
                            @Html.ActionLink("Client Trading Profile", "Index", "ClientTradingProfile")
                        </li>
                        <li>
                            @Html.ActionLink("Client T/P Introducer Map", "Index", "ClientTradingProfileIntroducerMap")
                        </li>

                    </ul>
                </li>
                <li>
                    <a href="#SubmenuProvider" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Provider</a>
                    <ul class="collapse list-unstyled" id="SubmenuProvider">
                        <li>
                            @Html.ActionLink("Provider", "Index", "Provider")
                        </li>
                        <li>
                            @Html.ActionLink("Provider Bank Account", "Index", "ProviderBankAccount")
                        </li>
                        <li>
                            @Html.ActionLink("Provider Trading Profile", "Index", "ProviderTradingProfile")
                        </li>
                        <li>
                            @Html.ActionLink("Provider T/P Introducer Map", "Index", "ProviderTradingProfileIntroducerMap")
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#SubmenuAccount" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">APA Account</a>
                    <ul class="collapse list-unstyled" id="SubmenuAccount">
                        <li>
                            @Html.ActionLink("APA Account", "Index", "Account")
                        </li>
                        <li>
                            @Html.ActionLink("APA Bank Account", "Index", "AccountBankAccount")
                        </li>
                        <li>
                            @Html.ActionLink("Adjust", "Index", "AccountAdjust")
                        </li>
                        <li>
                            @Html.ActionLink("Transfer", "Index", "AccountTransfer")
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#SubmenuIntroducer" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Introducer</a>
                    <ul class="collapse list-unstyled" id="SubmenuIntroducer">
                        <li>
                            @Html.ActionLink("Introducer", "Index", "Introducer")
                        </li>
                        <li>
                            @Html.ActionLink("Introducer Bank Account", "Index", "IntroducerBankAccount")
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#SubmenuMaintenance" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Maintenance</a>
                    <ul class="collapse list-unstyled" id="SubmenuMaintenance">
                        <li>
                            @Html.ActionLink("DFR", "Index", "Dfr")
                        </li>
                        <li>
                            @Html.ActionLink("Cost Rate", "Index", "CostRate")
                        </li>
                        <li>
                            @Html.ActionLink("Sender", "Index", "Sender")
                        </li>
                        <li>
                            @Html.ActionLink("Currency Pair", "Index", "CurrencyPair")
                        </li>
                        <li>
                            @Html.ActionLink("Currency", "Index", "Currency")
                        </li>
                        <li>
                            @Html.ActionLink("Country", "Index", "Country")
                        </li>
                        @if (Context.Session.GetString("Role") == "S")
                        {
                        <li>
                            @Html.ActionLink("User", "Index", "User")
                        </li>
                        }
                    </ul>
                </li>
            </ul>

            @*<ul class="list-unstyled CTAs">
                    <li>
                        <a href="https://bootstrapious.com/tutorial/files/sidebar.zip" class="download">Download source</a>
                    </li>
                    <li>
                        <a href="https://bootstrapious.com/p/bootstrap-sidebar" class="article">Back to article</a>
                    </li>
                </ul>*@
        </nav>

        <!-- Page Content  -->
        <div id="content">
            @if (Context.Session.GetString("UserName") != null)
            {
            <nav class="navbar navbar-expand-lg navbar-light bg-light justify-content-end">

                @if (Context.Session.GetString("Role") == "A")
                    {
                <div class="badge badge-primary">
                    Admin
                </div><div>&nbsp; &nbsp;</div>
                    }
                @if (Context.Session.GetString("Role") == "S")
                    {
                <div class="badge badge-primary">
                    Boss Level
                </div><div>&nbsp; &nbsp;</div>
                    }
                <div class="">
                    @Html.ActionLink("Logout", "Logout", "Home")
                </div>
            </nav>
            }
            <div class="container-fluid">

                @*<button type="button" id="sidebarCollapse" class="btn btn-info">
                        <i class="fas fa-align-left"></i>
                        <span>Toggle Sidebar</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fas fa-align-justify"></i>
                    </button>*@

                @*<div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Page</a>
                            </li>
                            <li class="nav-item">
                                @Html.ActionLink("Logout", "Logout", "Home")
                            </li>
                        </ul>
                    </div>*@

            </div>
            @*</nav>*@
            <main role="main" class="pb-3">
                @if (Context.Session.GetString("UserName") != null)
                {
                @RenderBody()
                }
                else
                {
                    { IgnoreBody(); }
                @Html.Partial("~/Views/Home/Login.cshtml")
                }
            </main>
        </div>
    </div>

    <!-- jQuery CDN - Slim version (=without AJAX) -->
