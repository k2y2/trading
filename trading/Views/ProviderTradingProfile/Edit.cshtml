@model trading.Models.ProviderTradingProfile

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Provider Trading Profile</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group row">
                <label asp-for="ProviderID" class="col-md-6 col-form-label"></label>
                @Html.DropDownList("ProviderID", ViewBag.Provider as SelectList, "", new { @class = "col-md-6 form-control" })
                <span asp-validation-for="ProviderID" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProviderTradingProfileName" class="col-md-6 col-form-label"></label>
                <input asp-for="ProviderTradingProfileName" class="col-md-6 form-control" />
                <span asp-validation-for="ProviderTradingProfileName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="CurrencyPairID" class="col-md-6 col-form-label"></label>
                @Html.DropDownList("CurrencyPairID", ViewBag.CurrencyPair as SelectList, "", new { @class = "col-md-6 form-control" })
                <span asp-validation-for="CurrencyPairID" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="DateTimeModified" class="control-label"></label>
                <input asp-for="DateTimeModified" class="form-control" />
                <span asp-validation-for="DateTimeModified" class="text-danger"></span>
            </div>*@
            <div class="form-group" hidden>
                <label asp-for="DateTimeAdded" class="control-label"></label>
                <input asp-for="DateTimeAdded" class="form-control" />
                <span asp-validation-for="DateTimeAdded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

