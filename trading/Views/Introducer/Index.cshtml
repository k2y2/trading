@model IEnumerable<trading.Models.IntroducerView>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Introducer</h1>

<p>
    <a asp-action="Create">New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <table class=" table-borderless">
            <tr><td>Introducer</td><td>Legal Name</td><td></td></tr>
            <tr>
                <td><input name="introducerName" value="@(ViewBag.introducerName)" /></td>
                <td><input name="introducerLegalName" value="@(ViewBag.introducerLegalName)" /></td>
                <td><input type="submit" value="Search" class="btn btn-default" /></td>
            </tr>
        </table>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IntroducerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IntroducerLegalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssociatedClient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IntroducerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IntroducerLegalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssociatedClient)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeAdded)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
