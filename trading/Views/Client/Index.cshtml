@model IEnumerable<trading.Models.ClientView>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Client</h1>

<p>
    <a asp-action="Create">New</a>
</p>

<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <table class=" table-borderless">
            <tr><td>Client Name</td><td></td></tr>
            <tr>
                <td><input name="clientName" value="@(ViewBag.clientName)" /></td> 
                <td><input type="submit" value="Search" class="btn btn-default" /></td>
            </tr>
        </table>
    </div>
</form>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClientName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientLegalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientTradingProfileInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeModified)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTimeAdded)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClientName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientLegalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientTradingProfileInfo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeModified)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTimeAdded)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
